.container
  .jumbotron.text-center
    h1 Blog Posts&nbsp;
      span.label.label-info {{blogposts.length}}
  .row
    .col-sm-6.col-sm-offset-3
      table.table.table-bordered
        thead
          tr
            th.text-center Todos
        tbody
          tr(*ngFor="var apost of blogposts")
            td
              input(type='checkbox' on-click='deleteBlogPost(apost._id)' bind-checked="false")
              | &nbsp;&nbsp;
              h3 {{apost.title}}
  .row
    .col-sm-6.col-sm-offset-3
      form(on-ngSubmit='createBlogPost()')
        .form-group
          input.form-control.input-lg.text-center(type='text' placeholder='What to do next?' bindon-ngModel='blogpostData.title' required)
          textarea.form-control.input-lg.text-center(rows='20' cols='50' placeholder='Diary Entry...' bindon-ngModel='blogpostData.text' required)

            .form-group.text-center
          br
          button.btn.btn-success.btn-lg.text-center(type='Submit') Do Something
